{
  "name": "mofadillah/php-bca",
  "type": "library",
  "description": "Library REST API Untuk Develop BCA Payment",
  "keywords": ["bca", "php", "rest", "banking"],
  "homepage": "https://github.com/odenktools/php-bca",
  "license": "MIT",
  "authors": [{
    "name": "mofadillah",
    "email": "mofadillah@gmail.com",
    "homepage": "https://fidproject.com",
    "role": "Developer"
  }],
  "require": {
    "php": ">=5.4",
    "ext-curl": "*",
    "mashape/unirest-php": "3.0.4",
    "nesbot/carbon": "~1.18"
  },
  "require-dev": {
    "phpunit/phpunit": "~4"
  },
  "autoload": {
    "psr-0": {
      "Bca\\": "lib/"
    }  
  },
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "scripts": {
    "test": "phpunit --colors=always",
    "test:ci": "composer test -- --verbose --coverage-text --coverage-clover=coverage.xml"
  }
}
